<form action="#/create" method="post" id="formCreateEvent">
    <br>
    <h4>Event Star <em>(Nakov, Messi, Borisov, etc.)</em>:</h4>

    <div><input type="text" name="star" required></div>
    <br>

    <h4>Event name:</h4>

    <div><input type="text" name="name" required></div>
    <br>
    <h4>Category <em>(please select the category)</em>:</h4>

    <div>
        <select name="category">
            <option>Concert</option>
            <option>Special Event</option>
            <option>Theater</option>
            <option>Sport Event</option>
        </select>
    </div>
    <br>
    <h4>Date:</h4>

    <div><input type="date" name="date" required></div>
    <br>

    <h4>Country:</h4>

    <div><input type="text" name="country" required></div>
    <br>

    <h4>Location:</h4>

    <div><input type="text" name="location" required></div>
    <br>
    <h4>Price:</h4>

    <div><input type="number" name="price" required></div>
    <br>
    <h4>Currency <em>(please select the currency)</em>:</h4>

    <div>
        <select name="currency">
            <option>lv. (BG leva)</option>
            <option>€ (Euro)</option>
            <option>Ƀ (Bitcoin)</option>
            <option>$ (US dollar)</option>
            <option>£ (GB pound)</option>
        </select>
    </div>
    <br>
    <h4>Available Tickets:</h4>

    <div><input type="number" name="tickets" required></div>
    <br>
    <h4>Description:</h4>

    <div><textarea name="description" rows="5" required></textarea></div>
    <br>
    <h4>Add name of the image file:</h4>

    <div><input type="text" name="image" required></div>
    <br>

    <div><input type="submit" id="buttonCreateEvent" class="get" value="Create Event"></div>
</form>