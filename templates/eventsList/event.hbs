<tr>
    <td>{{star}}</td>
    <td>{{category}}</td>
    <td>{{date}}</td>
    <td>{{location}}</td>
    <td>{{price}}</td>
    <td>{{currency}}</td>
    <td>{{tickets}}</td>
    <td>{{description}}</td>
    <td>
        {{#if isAdmin}}
            <a href="#/delete/:{{_id}}">[Delete]</a>
            <hr>
            <a href="#/edit/:{{_id}}">[Edit]</a>
        {{/if}}
        {{#if isUser}}
            <h4>Price:</h4>

            <div><input type="number" name="price" required></div>
            <hr>
            <a href="#/buy/:{{_id}}">[Buy]</a>
            <hr>
        {{else}}
            <p>If you want to buy tickets, have to log in.</p>
        {{/if}}
    </td>
</tr>