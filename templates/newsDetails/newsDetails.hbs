
{{>header}}
<section>
    <div class="w3-padding-64 w3-center w3-white">
        <div class="w3-half w3-section">
            <ul class="w3-ul w3-card-2 w3-hover-shadow">
                <img src="images/{{news.image}}" style="width:431px;height:260px;">
                <li class="w3-blue w3-xlarge w3-padding-32">{{news.summary}}</li>
                <li class="w3-padding-16"><b>{{news.content}}</b></li>
                {{#if isAdmin}}
                    <button class="w3-button w3-red w3-padding-large"><a href="#/delete/:{{_id}}">[Delete]</a></button>
                    <hr>
                    <button class="w3-button w3-green w3-padding-large"><a href="#/edit/:{{_id}}">[Edit]</a></button>
                {{/if}}

            </ul><br><br><br>

        </div>
    </div>
</section>
{{>footer}}