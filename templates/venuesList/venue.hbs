<article class="post">
    <div class="col thumbnail">
        <a href="https://softuni.bg/">
            <img src="{{image}}">
        </a>
    </div>
    <h2>{{name}}</h2>
    <h3>Location: {{location}}</h3>
    <p>{{description}}</p>
    <div class="venue-controls">
        <a href="#/venueEvents/:{{_id}}" class="btn btn-default">View events for this venue</a>
    </div>
    {{#if isAdmin}}

        <a href="#/editVenue/:{{_id}}" class="btn btn-default" id="editVenueButton"><i class="fa fa-edit"></i></a>
        <a href="#/deleteVenue/:{{_id}}" class="btn btn-default" id="deleteVenueButton"><i class="fa fa-trash-o"></i></a>

    {{/if}}
</article>